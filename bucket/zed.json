{
    "version": "0.208.5",
    "description": "Zed is a high-performance, multiplayer code editor from the creators of Atom and Tree-sitter. It's also open source.",
    "homepage": "https://zed.dev/",
    "license": "AGPL-3.0, Apache-2.0, GPL-3.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/zed-industries/zed/releases/download/v0.208.5/Zed-x86_64.exe",
            "hash": "f56cb6e2d5b5487934d32f3720aa791dcc16dc22e141f1d23e06823db43d13dc"
        }
    },
    "installer": {
        "script": [
            "Expand-InnoArchive -Path \"$dir\\$fname\" -ExtractDir '{app}'",
            "Expand-InnoArchive -Path \"$dir\\$fname\" -ExtractDir '{code_GetInstallDir}' -Removal"
        ]
    },
    "pre_install": [
        "$local=Join-Path $env:LOCALAPPDATA \"Zed\"",
        "$persist_local=Join-Path $persist_dir \"local\"",
        "& \"$bucketsdir\\$bucket\\scripts\\link.ps1\" $local $persist_local",
        "$appdata=Join-Path $env:APPDATA \"Zed\"",
        "$persist_appdata=Join-Path $persist_dir \"appdata\"",
        "& \"$bucketsdir\\$bucket\\scripts\\link.ps1\" $appdata $persist_appdata"
    ],
    "post_install": [
        "$dirpath = \"$dir\".Replace('\\', '\\\\')",
        "$exepath = \"$dir\\zed.exe\".Replace('\\', '\\\\')",
        "'install-associations', 'uninstall-associations', 'install-context', 'uninstall-context', 'install-context-it', 'uninstall-context-it', 'install-github-integration', 'uninstall-github-integration' | ForEach-Object {",
        "  if (Test-Path \"$bucketsdir\\$bucket\\scripts\\zed\\$_.reg\") {",
        "    $content = Get-Content \"$bucketsdir\\$bucket\\scripts\\zed\\$_.reg\"",
        "    $content = $content.Replace('$zeddir', $dirpath)",
        "    $content = $content.Replace('$zed', $exepath)",
        "    if ($global) {",
        "      $content = $content.Replace('HKEY_CURRENT_USER', 'HKEY_LOCAL_MACHINE')",
        "    }",
        "    $content | Set-Content -Path \"$dir\\$_.reg\"",
        "  }",
        "}",
        "# 自动导入注册表（可选）",
        "reg import \"$dir\\install-context.reg\"",
        "reg import \"$dir\\install-associations.reg\""
    ],
    "uninstaller": {
        "script": [
            "if ($cmd -eq 'uninstall')",
            "{",
            "   reg import \"$dir\\uninstall-context.reg\" ",
            "   reg import \"$dir\\uninstall-github-integration.reg\" ",
            "}"
        ]
    },
    "persist": ["local", "appdata"],
    "bin": ["bin\\zed.exe"],
    "shortcuts": [["Zed.exe", "Zed"]],
    "checkver": {
        "github": "https://github.com/zed-industries/zed"
    },
    "autoupdate": {
        "url": "https://github.com/zed-industries/zed/releases/download/v$version/Zed-x86_64.exe"
    }
}
