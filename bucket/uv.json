{
    "version": "0.8.3",
    "description": "An extremely fast Python package installer and resolver, written in Rust.",
    "homepage": "https://docs.astral.sh/uv/",
    "license": "Apache-2.0|MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/astral-sh/uv/releases/download/0.8.3/uv-x86_64-pc-windows-msvc.zip",
            "hash": "4ca84e28b08f48255f95156c5987d61a5e4c51a43372708bc6d84e994eeb7bdb"
        },
        "32bit": {
            "url": "https://github.com/astral-sh/uv/releases/download/0.8.3/uv-i686-pc-windows-msvc.zip",
            "hash": "5d272849a94b7ad36711f336d745e08ed3732042fc51f5c7f28bfc4e95463615"
        }
    },
    "pre_install": [
        "$configContent = @\"",
        "[[index]]",
        "url = \"https://pypi.tuna.tsinghua.edu.cn/simple\"",
        "default = true",
        "\"@",
        "Set-Content -Path \"$persist_dir\\uv.toml\" -Value $configContent"
    ],
    "env_set": {
        "UV_CONFIG_FILE": "$persist_dir\\uv.toml",
        "UV_CACHE_DIR": "$persist_dir\\cache",
        "UV_TOOL_DIR": "$persist_dir\\tools",
        "UV_TOOL_BIN_DIR": "$persist_dir\\tools\\bin",
        "UV_PYTHON_INSTALL_DIR": "$persist_dir\\python\\install",
        "UV_PYTHON_CACHE_DIR": "$persist_dir\\python\\cache",
        "UV_PYTHON_BIN_DIR": "$persist_dir\\python\\bin",
        "POETRY_HOME": "$persist_dir\\poetry\\data",
        "POETRY_CACHE_DIR": "$persist_dir\\poetry\\cache",
        "POETRY_CONFIG_DIR": "$persist_dir\\poetry\\config"
    },
    "env_add_path": ["tools\\bin"],
    "bin": ["uv.exe", "uvx.exe", "uvw.exe"],
    "persist": [
        "cache",
        "tools\\bin",
        "python\\bin",
        "python\\install",
        "python\\cache",
        "poetry\\data",
        "poetry\\cache",
        "poetry\\config"
    ],
    "checkver": {
        "github": "https://github.com/astral-sh/uv"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/astral-sh/uv/releases/download/$version/uv-x86_64-pc-windows-msvc.zip"
            },
            "32bit": {
                "url": "https://github.com/astral-sh/uv/releases/download/$version/uv-i686-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "url": "$url.sha256"
        }
    }
}
