{
    "version": "2026.01.0-147",
    "description": "A next-generation data science IDE",
    "homepage": "https://positron.posit.co",
    "license": "Elastic-2.0",
    "notes": [
        "For github integration, run:",
        "'reg import \"$dir\\install-github-integration.reg\"'"
    ],
    "suggest": {
        "R": "r",
        "Python": "python"
    },
    "architecture": {
        "64bit": {
            "url": "https://cdn.posit.co/positron/releases/win/x86_64/Positron-2026.01.0-147-UserSetup-x64.exe",
            "hash": "20bd4d9204eb31f6370c7abdc2f1e4e52532454c30ead8882f8b48ea03b9a8dd",
            "extract_dir": "{code_GetDestDir}"
        }
    },
    "innosetup": true,
    "pre_install": [
        "# 处理用户配置目录",
        "$config_dirs = @(",
        "    '.positron'",
        ")",
        "foreach ($config_dir in $config_dirs) {",
        "    $target_dir = Join-Path $env:USERPROFILE $config_dir",
        "    $link_dir = Join-Path $persist_dir $config_dir",
        "    if (Test-Path $target_dir) {",
        "        & \"$bucketsdir\\$bucket\\scripts\\link.ps1\" $target_dir $link_dir",
        "    }",
        "}",
        "",
        "# 链接 $env:APPDATA\\Positron 到 persist_dir/data",
        "$appdata_dir = Join-Path $env:APPDATA \"Positron\"",
        "$persist_data_dir = Join-Path $persist_dir data",
        "if (Test-Path $appdata_dir) {",
        "    & \"$bucketsdir\\$bucket\\scripts\\link.ps1\" $appdata_dir $persist_data_dir",
        "}"
    ],
    "post_install": [
        "$dirpath = \"$dir\".Replace('\\', '\\\\')",
        "$exepath = \"$dir\\Positron.exe\".Replace('\\', '\\\\')",
        "'install-associations', 'uninstall-associations', 'install-context', 'uninstall-context', 'install-context-it', 'uninstall-context-it', 'install-github-integration', 'uninstall-github-integration' | ForEach-Object {",
        "  if (Test-Path \"$bucketsdir\\$bucket\\scripts\\positron\\$_.reg\") {",
        "    $content = Get-Content \"$bucketsdir\\$bucket\\scripts\\positron\\$_.reg\"",
        "    $content = $content.Replace('$positrondir', $dirpath)",
        "    $content = $content.Replace('$positron', $exepath)",
        "    if ($global) {",
        "      $content = $content.Replace('HKEY_CURRENT_USER', 'HKEY_LOCAL_MACHINE')",
        "    }",
        "    $content | Set-Content -Path \"$dir\\$_.reg\"",
        "  }",
        "}",
        "# 自动导入注册表（可选）",
        "reg import \"$dir\\install-context.reg\"",
        "reg import \"$dir\\install-associations.reg\""
    ],
    "uninstaller": {
        "script": [
            "if ($cmd -eq 'uninstall')",
            "{",
            "   reg import \"$dir\\uninstall-context.reg\" ",
            "   reg import \"$dir\\uninstall-github-integration.reg\" ",
            "}"
        ]
    },
    "bin": [
        [
            "bin/positron.cmd",
            "positron"
        ]
    ],
    "shortcuts": [
        [
            "Positron.exe",
            "Positron"
        ]
    ],
    "persist": [
        "data",
        ".positron"
    ],
    "checkver": {
        "url": "https://cdn.posit.co/positron/releases/win/x86_64/user-releases.json",
        "jsonpath": "$.version"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cdn.posit.co/positron/releases/win/x86_64/Positron-$version-UserSetup-x64.exe",
                "hash": {
                    "url": "$baseurl/user-releases.json",
                    "jsonpath": "$.sha256hash"
                }
            }
        }
    }
}
